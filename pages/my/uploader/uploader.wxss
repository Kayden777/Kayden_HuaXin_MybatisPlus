.shadowBlock {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}

/* 选择图片按钮 */

.selectview {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  position: fixed;
  bottom: 0px;
}

/* 上传图片按钮 */

.selectviewsuccess {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  position: fixed;
  bottom: 0px;
  right: 0px;
}
