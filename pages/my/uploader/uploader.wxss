/* pages/weCoperStudy/weCoperStudy.wxss */

.imgDisposeArea {
  width: 100vw;
  height: 90vh;
  overflow: hidden;
  background: #fff;
}

.imgDisposeControlLine {
  width: 100vw;
  height: 10vh;
  position: relative;
  background: #fff;
}

.editBtn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 260rpx;
  height: 60rpx;
  background: #3a8d5f;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
}

.editBtn.reelectBtn {
  left: 10%;
}

.editBtn.editPerfectBtn {
  right: 10%;
}

.finalCanvasClass {
  position: absolute;
  top: -600%;
  left: 0;
  z-index: 15;
  transform-origin: left top;
  transform: scale(0.25);
}

.letterCanvasClass {
  position: absolute;
  top: -9999rpx;
  left: 0;
  transform-origin: left top;
  transform: scale(0.25);
  z-index: -1;
}

.letterSrcClass {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

